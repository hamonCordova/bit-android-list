<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/listview_item_bitcoin_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monetaray Description"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/listview_item_bitcoin_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/listview_item_bitcoin_description"
                android:background="@drawable/line"/>

            <TextView
                android:id="@+id/listview_item_bitcoin_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$ 0,00"
                android:layout_below="@+id/listview_item_bitcoin_line"
                android:textColor="@android:color/black"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>